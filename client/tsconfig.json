{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["*"],
      "~generated/*": ["generated/*"]
    },
    "types": ["next-auth"]
  },
  "include": ["next-env.d.ts", "src", "src/types", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "graphql.config.ts"],
  "exclude": ["node_modules"]
}
